<?xml version="1.0"?>
<config>
    <modules>
        <HM_Deleteorder>
            <version>0.1.0</version>
        </HM_Deleteorder>
    </modules>
    <admin>
        <routers>
			<deleteorder>
				<use>admin</use>
				<args>
					<module>HM_Deleteorder</module>
					<frontName>deleteorder</frontName>
				</args>
			</deleteorder>
        </routers>
    </admin>
    <adminhtml>
		<acl>
			<resources>
				<all>
					<title>Allow Everything</title>
				</all>
				<admin>
					<children>
						<HM_Deleteorder>
							<title>Deleteorder Module</title>
							<sort_order>10</sort_order>
						</HM_Deleteorder>
					</children>
				</admin>
			</resources>
		</acl>
		<layout>
			<updates>
				<deleteorder>
					<file>deleteorder.xml</file>
				</deleteorder>
			</updates>
		</layout>
    </adminhtml>   
    <global>
        <models>
            <deleteorder>
                <class>HM_Deleteorder_Model</class>
                <resourceModel>deleteorder_mysql4</resourceModel>
            </deleteorder>
            <deleteorder_mysql4>
                <class>HM_Deleteorder_Model_Mysql4</class>
                <entities>
                    <deleteorder>
                        <table>deleteorder</table>
                    </deleteorder>
                </entities>
            </deleteorder_mysql4>
        </models>
        <resources>
            <deleteorder_setup>
                <setup>
                    <module>HM_Deleteorder</module>
                </setup>
                <connection>
                    <use>core_setup</use>
                </connection>
            </deleteorder_setup>
            <deleteorder_write>
                <connection>
                    <use>core_write</use>
                </connection>
            </deleteorder_write>
            <deleteorder_read>
                <connection>
                    <use>core_read</use>
                </connection>
            </deleteorder_read>
        </resources>
        <blocks>
		 <adminhtml>
            <rewrite>
                <sales_order_grid>HM_Deleteorder_Block_Adminhtml_Sales_Order_Grid</sales_order_grid>
            </rewrite>		 
           <rewrite>
                <sales_order_view>HM_Deleteorder_Block_Adminhtml_Sales_Order_View</sales_order_view>
            </rewrite>
        </adminhtml>
            <deleteorder>
                <class>HM_Deleteorder_Block</class>
            </deleteorder>
        </blocks>
        <helpers>
            <deleteorder>
                <class>HM_Deleteorder_Helper</class>
            </deleteorder>
        </helpers>
    </global>
</config>